{{#if error}}
<div class="alert alert-danger" role="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <span class="sr-only">Error:</span>
  {{error}}
</div>
{{/if}}
<!-- LOGIN FORM -->
<form method="POST" style="max-width: 400px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <!-- Header -->
  <h3 style="color: yellow">Welcome to HappiApp :)</h3>
  <!-- Form attributes -->
  <div class="form-group">
    <label>Username</label>
    <input type="text" name="username" class="form-control">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" name="password" class="form-control">
  </div>
  <div class="form-group">
    <label>Verify Password</label>
    <input type="password" name="passwordRepeat" class="form-control">
  </div>
  <div class="form-group">
    <label>Birthday</label>
    <input type="date" name="birthday" class="form-control">
  </div>
  <div class="form-group">
    <label>Email Address</label>
    <input type="email" name="email" class="form-control">
  </div>
  <div class="form-group">
    <label>City</label>
    <input type="text" name="location" class="form-control">
  </div>
  <div class="form-group">
    <label>School or Company</label>
    <input type="text" name="affiliation" class="form-control">
  </div>
  <div class="form-group">
    <label>User Bio</label>
    <textarea name="bio" class="form-control"></textarea>
  </div>
  <div class="form-group">
    <button class="btn btn-success">Register</button>
  </div>
  <a href="/">Not sure? Read more back on the landing page</a>
</form>
