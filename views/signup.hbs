<head>
    <link rel='stylesheet' href='/stylesheets/signup.css' />
</head>

{{#if error}}
<div>
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <span class="sr-only">Error:</span>
  {{error}}
</div>
{{/if}}
<!-- LOGIN FORM -->
<div id="signup-box">
<form method="POST">
  <!-- Header -->
  <h2>REGISTER</h2>
  <!-- Form attributes -->
  <center><div class="form-group">
    <input id="choosePic" type='file' onchange="readURL(this);"/>
    <input style="display: none" name="picture" id="picURL" value=""/>
    <div class="image">
      <img id="pic" src="#" />
    </div>
  </div></center>
  <div class="form-group">
    <input placeholder="First Name" type="text" name="firstName" class="form-control">
  </div>
  <div class="form-group">
    <input placeholder="Last Name" type="text" name="lastName" class="form-control">
  </div>
  <div class="form-group">
    <input placeholder="Username" type="text" name="username" class="form-control">
  </div>
  <div class="form-group">
    <input placeholder="Password" type="password" name="password" class="form-control">
  </div>
  <div class="form-group">
    <input placeholder="Verify password" type="password" name="passwordRepeat" class="form-control">
  </div>
  <div class="form-group">
    <input placeholder="Birthday" type="date" name="birthday" class="form-control">
  </div>
  <div class="form-group">
    <input placeholder="Email Address" type="email" name="email" class="form-control">
  </div>
  <div class="form-group">
    <input placeholder="City" type="text" name="location" class="form-control">
  </div>
  <div class="form-group">
    <input placeholder="School & Company" type="text" name="affiliation" class="form-control">
  </div>
  <div class="form-group">
    <textarea placeholder="User Bio" name="bio" class="form-control"></textarea>
  </div>
  <div class="form-group">
    <button class="btn signup-button">Register</button></br></br>
  </div>
  <a href="/">Learn more. </a>
</form>
</div>


<script>
var profilePic;
function readURL(input) {
  console.log(input)
  if (input.files && input.files[0]) {
      var reader = new FileReader();

      reader.onload = function (e) {
          $('#pic')
              .attr('src', e.target.result)
              .width(200)
              .height(200);
          console.log(e.target.result)
          // $('#picURL').val(e.target.result)
      };

      reader.readAsDataURL(input.files[0]);
      $('#choosePic').hide();
      $('#pic').show();
  }
  }

$(document).ready(function() {
  $('#pic').hide();
})
</script>
